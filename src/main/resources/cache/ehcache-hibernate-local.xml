<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="hibernateCache">

	<diskStore path="java.io.tmpdir/ehcache/sloth_app/hibernate" />

	<!-- DefaultCache setting. -->
	<defaultCache maxEntriesLocalHeap="10000" eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="600"
		overflowToDisk="true" maxEntriesLocalDisk="100000" />

	<!-- Special objects setting. -->
	<cache name="com.visionet.letsdesk.app.user.entity.User" maxEntriesLocalHeap="500" eternal="true"
		overflowToDisk="true" maxEntriesLocalDisk="10000" />
	<cache name="com.visionet.letsdesk.app.user.entity.User.roleSet" maxEntriesLocalHeap="1000" eternal="true"
		overflowToDisk="true" maxEntriesLocalDisk="10000" />
    <cache name="com.visionet.letsdesk.app.user.entity.Role" maxEntriesLocalHeap="100"
           eternal="true" overflowToDisk="true" maxEntriesLocalDisk="1000" />
	<cache name="com.visionet.letsdesk.app.user.entity.Resource" maxEntriesLocalHeap="100" eternal="true"
		overflowToDisk="true" maxEntriesLocalDisk="10000" />

</ehcache>
